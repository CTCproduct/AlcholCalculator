<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hirokikirigaya.alchoholcolculator.MainActivity"
    android:orientation="vertical">

    <!--体重-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VtxtWeight"
            android:gravity="right"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重：" />

        <EditText
            android:id="@+id/EtxtWeight"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="kg"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--度数-->
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VtxtAldegree"
            android:gravity="right"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="度数：" />

        <EditText
            android:id="@+id/EtxtAldegree"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="％"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--アルコール量-->
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VtxtMili"
            android:gravity="right"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="　量：" />

        <EditText
            android:id="@+id/EtxtMili"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="ml"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--計算ボタン-->
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnCalc"
            android:text="計算"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.example.hirokikirigaya.alchoholcolculator.AutoFontSizeTextView
            android:id="@+id/VtxtResult"
            android:gravity="center"
            android:textSize="20dp"
            android:text="計算結果を表示します。"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>